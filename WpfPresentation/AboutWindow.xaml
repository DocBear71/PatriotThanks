<Window x:Class="WpfPresentation.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        xmlns:local="clr-namespace:WpfPresentation"
        mc:Ignorable="d"
        Title="About Patriot Thanks" 
        WindowStartupLocation="CenterScreen" 
        Height="650" Width="850"
        MinHeight="450" MinWidth="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#e74c3c" Padding="20">
            <StackPanel>
                <TextBlock Text="About Patriot Thanks" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Connecting those who serve with businesses that appreciate their sacrifice" 
                           FontSize="14" Foreground="#fadbd8" FontStyle="Italic"
                           HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25">
            <StackPanel>
                <!-- Mission Banner -->
                <Border Background="#e8f5e8" BorderBrush="#28a745" BorderThickness="2" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,25">
                    <emoji:TextBlock Text="⭐ USA ⭐ Bridging the gap between service members, first responders, their families, and appreciative local businesses across the United States."
                                     FontWeight="Bold" Foreground="#155724" TextWrapping="Wrap" TextAlignment="Center"/>
                </Border>

                <!-- Our Mission -->
                <TextBlock Text="Our Mission" FontSize="20" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,15"/>

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,15" LineHeight="24">
                    Patriot Thanks is a comprehensive web and mobile platform designed to connect veterans, active-duty military personnel, first responders, and their families with local businesses that offer discounts and incentives in appreciation of their service. Our platform serves a dual purpose: making it easier for those who serve our communities to find businesses that appreciate their service, while helping local businesses increase their customer base by showcasing their support for these important community members.
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,20" LineHeight="24">
                    Whether you're looking for a restaurant that offers military discounts, a retailer with first responder incentives, or a service provider that values your family's sacrifice, Patriot Thanks connects you with local businesses that want to show appreciation for service members and their families.
                </TextBlock>

                <!-- What We Offer -->
                <Border Background="#f8f9fa" Padding="20" CornerRadius="8" Margin="0,0,0,25">
                    <StackPanel>
                        <TextBlock Text="What We Offer" FontSize="18" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                <emoji:TextBlock Text="🔍 Easy Discovery" FontWeight="Bold" Foreground="#e74c3c" Margin="0,0,0,5"/>
                                <TextBlock Text="Find local businesses offering military and first responder discounts with our intuitive search and location-based discovery tools." 
                                           TextWrapping="Wrap" Foreground="#666666" FontSize="12"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,15">
                                <emoji:TextBlock Text="✅ Verified Benefits" FontWeight="Bold" Foreground="#e74c3c" Margin="0,0,0,5"/>
                                <TextBlock Text="Access exclusive verified discounts and incentives specifically for service members, veterans, first responders, and their families." 
                                           TextWrapping="Wrap" Foreground="#666666" FontSize="12"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,15">
                                <emoji:TextBlock Text="🏢 Business Directory" FontWeight="Bold" Foreground="#e74c3c" Margin="0,0,0,5"/>
                                <TextBlock Text="Comprehensive directory of participating businesses with detailed information about their discount programs and requirements." 
                                           TextWrapping="Wrap" Foreground="#666666" FontSize="12"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,15">
                                <emoji:TextBlock Text="📱 Mobile Access" FontWeight="Bold" Foreground="#e74c3c" Margin="0,0,0,5"/>
                                <TextBlock Text="Available as a responsive web app and progressive web app (PWA) for easy access on any device, anywhere." 
                                           TextWrapping="Wrap" Foreground="#666666" FontSize="12"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,0">
                                <emoji:TextBlock Text="⭐ Reviews and Ratings" FontWeight="Bold" Foreground="#e74c3c" Margin="0,0,0,5"/>
                                <TextBlock Text="Read and share experiences with fellow service members to help build a trusted community of recommendations." 
                                           TextWrapping="Wrap" Foreground="#666666" FontSize="12"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="15,0,0,0">
                                <emoji:TextBlock Text="🔒 Secure Verification" FontWeight="Bold" Foreground="#e74c3c" Margin="0,0,0,5"/>
                                <TextBlock Text="Secure verification system to protect the integrity of discounts and ensure benefits reach those who have earned them." 
                                           TextWrapping="Wrap" Foreground="#666666" FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Who We Serve -->
                <TextBlock Text="Who We Serve" FontSize="20" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,15"/>

                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#e8f5e8" BorderBrush="#28a745" BorderThickness="1" 
                            CornerRadius="8" Padding="15" Margin="0,0,10,0">
                        <StackPanel>
                            <emoji:TextBlock Text="⭐ Military Community" FontWeight="Bold" Foreground="#155724" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock Text="• Active Duty Service Members" Foreground="#155724" Margin="0,0,0,3"/>
                            <TextBlock Text="• Veterans of all branches" Foreground="#155724" Margin="0,0,0,3"/>
                            <TextBlock Text="• National Guard and Reserves" Foreground="#155724" Margin="0,0,0,3"/>
                            <TextBlock Text="• Military Spouses and Dependents" Foreground="#155724" Margin="0,0,0,3"/>
                            <TextBlock Text="• Gold Star Families" Foreground="#155724"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="#cce5ff" BorderBrush="#004085" BorderThickness="1" 
                            CornerRadius="8" Padding="15" Margin="10,0,0,0">
                        <StackPanel>
                            <emoji:TextBlock Text="⭐ First Responders" FontWeight="Bold" Foreground="#004085" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock Text="• Law Enforcement Officers" Foreground="#004085" Margin="0,0,0,3"/>
                            <TextBlock Text="• Firefighters" Foreground="#004085" Margin="0,0,0,3"/>
                            <TextBlock Text="• Emergency Medical Technicians" Foreground="#004085" Margin="0,0,0,3"/>
                            <TextBlock Text="• Paramedics" Foreground="#004085" Margin="0,0,0,3"/>
                            <TextBlock Text="• 911 Dispatchers" Foreground="#004085"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- About the Founder -->
                <Border Background="#fff3cd" BorderBrush="#ffc107" BorderThickness="1" 
                        CornerRadius="8" Padding="20" Margin="0,0,0,25">
                    <StackPanel>
                        <TextBlock Text="About the Founder" FontSize="18" FontWeight="Bold" Foreground="#856404" Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" Foreground="#856404" Margin="0,0,0,10" LineHeight="22">
                            Patriot Thanks was founded by Dr. Edward McKeown, a 20-year U.S. Army veteran who served from 1986-2006. After his military service, Dr. McKeown pursued his passion for education, earning his Ph.D. in Hospitality Management. He currently teaches Computer Science and Hospitality Management at Kirkwood Community College in Cedar Rapids, Iowa.
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#856404" Margin="0,0,0,10" LineHeight="22">
                            As an active member of Kirkwood's Veterans' Association, Dr. McKeown continues to support fellow veterans in their educational and career transitions. He's also known in his community for occasionally donning the red suit to play Santa for special needs children, demonstrating his commitment to giving back to those who need extra support.
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#856404" LineHeight="22">
                            Dr. McKeown is also the author of the "Doc Bear's Comfort Food Survival Guide" cookbook series and operates Doc Bear Enterprises, where he provides food safety training, technology solutions, and platforms like Patriot Thanks that serve communities.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Why Patriot Thanks Matters -->
                <Border Background="#d1ecf1" BorderBrush="#17a2b8" BorderThickness="1" 
                        CornerRadius="8" Padding="20" Margin="0,0,0,25">
                    <StackPanel>
                        <TextBlock Text="Why Patriot Thanks Matters" FontSize="18" FontWeight="Bold" Foreground="#0c5460" Margin="0,0,0,10"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="• Honoring service by making it easier to find appreciative businesses" Foreground="#0c5460" Margin="0,0,0,5"/>
                            <TextBlock Text="• Supporting military families during transitions and challenging times" Foreground="#0c5460" Margin="0,0,0,5"/>
                            <TextBlock Text="• Helping first responders feel valued in their communities" Foreground="#0c5460" Margin="0,0,0,5"/>
                            <TextBlock Text="• Connecting local businesses with customers who value their support" Foreground="#0c5460" Margin="0,0,0,5"/>
                            <TextBlock Text="• Building stronger community connections between those who serve and those they protect" Foreground="#0c5460" Margin="0,0,0,5"/>
                            <TextBlock Text="• Creating a trusted platform where service and appreciation meet" Foreground="#0c5460"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Contact Section -->
                <Border Background="#f8f9fa" Padding="20" CornerRadius="8" Margin="0,0,0,15">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Join Our Mission" FontSize="18" FontWeight="Bold" Foreground="#2c3e50" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Doc Bear Enterprises, LLC." FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="5249 N Park Pl NE, PMB 4011" HorizontalAlignment="Center"/>
                        <TextBlock Text="Cedar Rapids, IA 52402" HorizontalAlignment="Center"/>
                        <TextBlock Text="Email: privacy@patriotthanks.com" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBlock Text="Website: www.patriotthanks.com" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Footer Tagline -->
                <Border Background="#2c3e50" Padding="15" CornerRadius="5">
                    <emoji:TextBlock Text="⭐ Patriot Thanks - Where service meets appreciation, one business at a time. ⭐"
                                     TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" Foreground="White"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer with Close Button -->
        <Border Grid.Row="2" Background="#f0f0f0" Padding="10">
            <Button x:Name="btnClose" Content="Close" Width="100" Height="30" 
                    HorizontalAlignment="Center" Click="btnClose_Click"/>
        </Border>
    </Grid>
</Window>
