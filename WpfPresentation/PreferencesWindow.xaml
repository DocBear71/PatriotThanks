<Window x:Class="WpfPresentation.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPresentation"
        mc:Ignorable="d"
        Title="Preferences - Patriot Thanks" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Height="600" Width="520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#6c757d" Padding="15">
            <StackPanel>
                <TextBlock Text="Preferences" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Customize your Patriot Thanks experience" 
                           FontSize="12" Foreground="#dee2e6"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>

                <!-- Display Settings Section -->
                <TextBlock Text="Display Settings" FontSize="16" FontWeight="Bold" 
                           Foreground="#2c3e50" Margin="0,0,0,10"/>
                <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Font Size -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Font Size:" VerticalAlignment="Center"/>
                            <Slider x:Name="sldFontSize" Grid.Column="1" 
                                    Minimum="10" Maximum="18" Value="12" 
                                    TickFrequency="1" IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"
                                    ValueChanged="sldFontSize_ValueChanged"/>
                            <TextBlock x:Name="lblFontSizeValue" Grid.Column="2" 
                                       Text="12pt" VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- Theme -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Theme:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cboTheme" Grid.Column="1" SelectedIndex="0"
                                      SelectionChanged="cboTheme_SelectionChanged">
                                <ComboBoxItem Content="Light (Default)" Tag="Light"/>
                                <ComboBoxItem Content="Dark" Tag="Dark"/>
                                <ComboBoxItem Content="High Contrast" Tag="HighContrast"/>
                                <ComboBoxItem Content="Patriot (Red, White, Blue)" Tag="Patriot"/>
                            </ComboBox>
                        </Grid>

                        <!-- Theme Preview -->
                        <Border x:Name="themePreview" Height="40" CornerRadius="5" 
                                BorderThickness="1" BorderBrush="#dee2e6" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="previewBg" Grid.Column="0" Background="#FFFFFF"/>
                                <Border x:Name="previewAccent" Grid.Column="1" Background="#007BFF"/>
                                <Border x:Name="previewText" Grid.Column="2" Background="#212529"/>
                            </Grid>
                        </Border>
                        <TextBlock Text="Theme preview: Background | Accent | Text" 
                                   FontSize="10" Foreground="#6c757d" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                        <!-- Show Images -->
                        <CheckBox x:Name="chkShowImages" Content="Show business images in search results" 
                                  IsChecked="True" Margin="0,0,0,10"/>

                        <!-- Compact View -->
                        <CheckBox x:Name="chkCompactView" Content="Use compact view for lists" 
                                  IsChecked="False"/>
                    </StackPanel>
                </Border>

                <!-- Search Defaults Section -->
                <TextBlock Text="Search Defaults" FontSize="16" FontWeight="Bold" 
                           Foreground="#2c3e50" Margin="0,0,0,10"/>
                <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Default State -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Default State:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cboDefaultState" Grid.Column="1" SelectedIndex="0">
                                <ComboBoxItem Content="-- No Default --" Tag=""/>
                                <ComboBoxItem Content="Alabama" Tag="Alabama"/>
                                <ComboBoxItem Content="Alaska" Tag="Alaska"/>
                                <ComboBoxItem Content="Arizona" Tag="Arizona"/>
                                <ComboBoxItem Content="Arkansas" Tag="Arkansas"/>
                                <ComboBoxItem Content="California" Tag="California"/>
                                <ComboBoxItem Content="Colorado" Tag="Colorado"/>
                                <ComboBoxItem Content="Connecticut" Tag="Connecticut"/>
                                <ComboBoxItem Content="Delaware" Tag="Delaware"/>
                                <ComboBoxItem Content="Florida" Tag="Florida"/>
                                <ComboBoxItem Content="Georgia" Tag="Georgia"/>
                                <ComboBoxItem Content="Hawaii" Tag="Hawaii"/>
                                <ComboBoxItem Content="Idaho" Tag="Idaho"/>
                                <ComboBoxItem Content="Illinois" Tag="Illinois"/>
                                <ComboBoxItem Content="Indiana" Tag="Indiana"/>
                                <ComboBoxItem Content="Iowa" Tag="Iowa"/>
                                <ComboBoxItem Content="Kansas" Tag="Kansas"/>
                                <ComboBoxItem Content="Kentucky" Tag="Kentucky"/>
                                <ComboBoxItem Content="Louisiana" Tag="Louisiana"/>
                                <ComboBoxItem Content="Maine" Tag="Maine"/>
                                <ComboBoxItem Content="Maryland" Tag="Maryland"/>
                                <ComboBoxItem Content="Massachusetts" Tag="Massachusetts"/>
                                <ComboBoxItem Content="Michigan" Tag="Michigan"/>
                                <ComboBoxItem Content="Minnesota" Tag="Minnesota"/>
                                <ComboBoxItem Content="Mississippi" Tag="Mississippi"/>
                                <ComboBoxItem Content="Missouri" Tag="Missouri"/>
                                <ComboBoxItem Content="Montana" Tag="Montana"/>
                                <ComboBoxItem Content="Nebraska" Tag="Nebraska"/>
                                <ComboBoxItem Content="Nevada" Tag="Nevada"/>
                                <ComboBoxItem Content="New Hampshire" Tag="New Hampshire"/>
                                <ComboBoxItem Content="New Jersey" Tag="New Jersey"/>
                                <ComboBoxItem Content="New Mexico" Tag="New Mexico"/>
                                <ComboBoxItem Content="New York" Tag="New York"/>
                                <ComboBoxItem Content="North Carolina" Tag="North Carolina"/>
                                <ComboBoxItem Content="North Dakota" Tag="North Dakota"/>
                                <ComboBoxItem Content="Ohio" Tag="Ohio"/>
                                <ComboBoxItem Content="Oklahoma" Tag="Oklahoma"/>
                                <ComboBoxItem Content="Oregon" Tag="Oregon"/>
                                <ComboBoxItem Content="Pennsylvania" Tag="Pennsylvania"/>
                                <ComboBoxItem Content="Rhode Island" Tag="Rhode Island"/>
                                <ComboBoxItem Content="South Carolina" Tag="South Carolina"/>
                                <ComboBoxItem Content="South Dakota" Tag="South Dakota"/>
                                <ComboBoxItem Content="Tennessee" Tag="Tennessee"/>
                                <ComboBoxItem Content="Texas" Tag="Texas"/>
                                <ComboBoxItem Content="Utah" Tag="Utah"/>
                                <ComboBoxItem Content="Vermont" Tag="Vermont"/>
                                <ComboBoxItem Content="Virginia" Tag="Virginia"/>
                                <ComboBoxItem Content="Washington" Tag="Washington"/>
                                <ComboBoxItem Content="West Virginia" Tag="West Virginia"/>
                                <ComboBoxItem Content="Wisconsin" Tag="Wisconsin"/>
                                <ComboBoxItem Content="Wyoming" Tag="Wyoming"/>
                            </ComboBox>
                        </Grid>

                        <!-- Default Search Radius -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Search Radius:" VerticalAlignment="Center"/>
                            <Slider x:Name="sldSearchRadius" Grid.Column="1" 
                                    Minimum="5" Maximum="100" Value="25" 
                                    TickFrequency="5" IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"
                                    ValueChanged="sldSearchRadius_ValueChanged"/>
                            <TextBlock x:Name="lblSearchRadiusValue" Grid.Column="2" 
                                       Text="25 mi" VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- Results Per Page -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Results Per Page:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cboResultsPerPage" Grid.Column="1" SelectedIndex="1">
                                <ComboBoxItem Content="10" Tag="10"/>
                                <ComboBoxItem Content="25" Tag="25"/>
                                <ComboBoxItem Content="50" Tag="50"/>
                                <ComboBoxItem Content="100" Tag="100"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Remember Settings Section -->
                <TextBlock Text="Remember Settings" FontSize="16" FontWeight="Bold" 
                           Foreground="#2c3e50" Margin="0,0,0,10"/>
                <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <CheckBox x:Name="chkRememberLastSearch" 
                                  Content="Remember last search criteria" 
                                  IsChecked="True" Margin="0,0,0,10"/>
                        <CheckBox x:Name="chkRememberWindowPosition" 
                                  Content="Remember window size and position" 
                                  IsChecked="True" Margin="0,0,0,10"/>
                        <CheckBox x:Name="chkRememberLastTab" 
                                  Content="Remember last active tab" 
                                  IsChecked="False"/>
                    </StackPanel>
                </Border>

                <!-- Notifications Section -->
                <TextBlock Text="Notifications" FontSize="16" FontWeight="Bold" 
                           Foreground="#2c3e50" Margin="0,0,0,10"/>
                <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <CheckBox x:Name="chkNotifyNewBusinesses" 
                                  Content="Notify me of new businesses in my area" 
                                  IsChecked="True" Margin="0,0,0,10"/>
                        <CheckBox x:Name="chkNotifyNewIncentives" 
                                  Content="Notify me of new incentives" 
                                  IsChecked="True" Margin="0,0,0,10"/>
                        <CheckBox x:Name="chkNotifyExpiringIncentives" 
                                  Content="Notify me before incentives expire" 
                                  IsChecked="False"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer with Buttons -->
        <Border Grid.Row="2" Background="#f0f0f0" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Reset to Defaults -->
                <Button x:Name="btnResetDefaults" Grid.Column="0" Content="Reset to Defaults" 
                        Width="120" Height="30"
                        Click="btnResetDefaults_Click"/>

                <!-- Save and Cancel -->
                <Button x:Name="btnSave" Grid.Column="2" Content="Save" 
                        Width="80" Height="30" Margin="0,0,10,0"
                        Background="#28a745" Foreground="White" FontWeight="Bold"
                        Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Grid.Column="3" Content="Cancel" 
                        Width="80" Height="30"
                        Click="btnCancel_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
