<Window x:Class="WpfPresentation.BusinessDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Business Details" Height="500" Width="500"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="txtBusinessName" Grid.Row="0" 
                   FontSize="20" FontWeight="Bold" 
                   TextWrapping="Wrap" Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

        <!-- Details Section -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" 
                CornerRadius="5" Padding="15" Background="#FAFAFA">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Business Information -->
                    <TextBlock Text="BUSINESS INFORMATION" FontWeight="Bold" 
                               FontSize="14" Foreground="#2E86AB" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Business Type:" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtBusinessType" Grid.Column="1" TextWrapping="Wrap"/>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Phone:" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtPhone" Grid.Column="1"/>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Status:" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtStatus" Grid.Column="1"/>
                    </Grid>

                    <Separator Margin="0,10"/>

                    <!-- Address Information -->
                    <TextBlock Text="ADDRESS" FontWeight="Bold" 
                               FontSize="14" Foreground="#2E86AB" Margin="0,0,0,10"/>

                    <TextBlock x:Name="txtStreetAddress" Margin="0,0,0,3"/>
                    <TextBlock x:Name="txtAddress2" Margin="0,0,0,3"/>
                    <TextBlock x:Name="txtCityStateZip" Margin="0,0,0,3"/>
                    <TextBlock x:Name="txtLocationName" Margin="0,5,0,0" FontStyle="Italic"/>

                    <Separator Margin="0,10"/>

                    <!-- Incentives Summary -->
                    <TextBlock Text="INCENTIVES" FontWeight="Bold" 
                               FontSize="14" Foreground="#2E86AB" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtIncentiveSummary" TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <TextBlock Grid.Row="2" Text="What would you like to do?" 
                   FontWeight="SemiBold" Margin="0,15,0,10"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="3" Orientation="Vertical" 
                    HorizontalAlignment="Center" Margin="0,0,0,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnEditBusiness" Content="Edit Business" 
                        Width="120" Height="35" Margin="5"
                        Click="btnEditBusiness_Click"
                        Background="#2E86AB" Foreground="White" FontWeight="SemiBold"/>
                <Button x:Name="btnViewIncentives" Content="View Incentives" 
                        Width="120" Height="35" Margin="5"
                        Click="btnViewIncentives_Click"
                        Background="#A23B72" Foreground="White" FontWeight="SemiBold"/>
                <Button x:Name="btnAddIncentive" Content="Add Incentive" 
                        Width="120" Height="35" Margin="5"
                        Click="btnAddIncentive_Click"
                        Background="#F18F01" Foreground="White" FontWeight="SemiBold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnViewMap" Content="📍 View Map" 
                        Width="120" Height="35" Margin="5"
                        Click="btnViewMap_Click"
                        Background="#28A745" Foreground="White" FontWeight="SemiBold"/>
                <Button x:Name="btnCancel" Content="Cancel" 
                        Width="100" Height="35" Margin="5"
                        Click="btnCancel_Click"
                        Background="#6C757D" Foreground="White" FontWeight="SemiBold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
