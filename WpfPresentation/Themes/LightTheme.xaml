<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme for Patriot Thanks -->
    <!-- This is the default theme -->

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="TertiaryBackground" Color="#E9ECEF"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryText" Color="#212529"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#6C757D"/>
    <SolidColorBrush x:Key="DisabledText" Color="#ADB5BD"/>

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentColor" Color="#007BFF"/>
    <SolidColorBrush x:Key="AccentColorHover" Color="#0056B3"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#28A745"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FFC107"/>
    <SolidColorBrush x:Key="DangerColor" Color="#DC3545"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderColor" Color="#DEE2E6"/>
    <SolidColorBrush x:Key="BorderColorFocus" Color="#80BDFF"/>

    <!-- Control Backgrounds -->
    <SolidColorBrush x:Key="ControlBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ControlBackgroundHover" Color="#E9ECEF"/>
    <SolidColorBrush x:Key="ControlBackgroundPressed" Color="#DEE2E6"/>

    <!-- Menu Colors -->
    <SolidColorBrush x:Key="MenuBackground" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="MenuForeground" Color="#212529"/>
    <SolidColorBrush x:Key="MenuHighlight" Color="#E9ECEF"/>

    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridAlternateRow" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="DataGridHeader" Color="#E9ECEF"/>
    <SolidColorBrush x:Key="DataGridHeaderText" Color="#212529"/>
    <SolidColorBrush x:Key="DataGridSelectedRow" Color="#007BFF"/>
    <SolidColorBrush x:Key="DataGridSelectedRowText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridBorder" Color="#DEE2E6"/>

    <!-- TabControl Colors -->
    <SolidColorBrush x:Key="TabBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabSelectedBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabUnselectedBackground" Color="#E9ECEF"/>
    <SolidColorBrush x:Key="TabBorder" Color="#DEE2E6"/>

    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#007BFF"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#0056B3"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#007BFF"/>

    <!-- StatusBar Colors -->
    <SolidColorBrush x:Key="StatusBarBackground" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="StatusBarForeground" Color="#212529"/>

    <!-- GroupBox Colors -->
    <SolidColorBrush x:Key="GroupBoxBorder" Color="#DEE2E6"/>
    <SolidColorBrush x:Key="GroupBoxHeader" Color="#212529"/>

</ResourceDictionary>
