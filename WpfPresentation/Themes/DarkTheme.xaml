<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme for Patriot Thanks -->

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#252526"/>
    <SolidColorBrush x:Key="TertiaryBackground" Color="#333333"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryText" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="DisabledText" Color="#606060"/>

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentColor" Color="#0D6EFD"/>
    <SolidColorBrush x:Key="AccentColorHover" Color="#3D8BFD"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#198754"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FFC107"/>
    <SolidColorBrush x:Key="DangerColor" Color="#DC3545"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderColor" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="BorderColorFocus" Color="#0D6EFD"/>

    <!-- Control Backgrounds -->
    <SolidColorBrush x:Key="ControlBackground" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="ControlBackgroundHover" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="ControlBackgroundPressed" Color="#4A4A4A"/>

    <!-- Menu Colors -->
    <SolidColorBrush x:Key="MenuBackground" Color="#252526"/>
    <SolidColorBrush x:Key="MenuForeground" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="MenuHighlight" Color="#3C3C3C"/>

    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="DataGridAlternateRow" Color="#252526"/>
    <SolidColorBrush x:Key="DataGridHeader" Color="#333333"/>
    <SolidColorBrush x:Key="DataGridHeaderText" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="DataGridSelectedRow" Color="#0D6EFD"/>
    <SolidColorBrush x:Key="DataGridSelectedRowText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridBorder" Color="#3C3C3C"/>

    <!-- TabControl Colors -->
    <SolidColorBrush x:Key="TabBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TabSelectedBackground" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="TabUnselectedBackground" Color="#252526"/>
    <SolidColorBrush x:Key="TabBorder" Color="#3C3C3C"/>

    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#0D6EFD"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#3D8BFD"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#0D6EFD"/>

    <!-- StatusBar Colors -->
    <SolidColorBrush x:Key="StatusBarBackground" Color="#252526"/>
    <SolidColorBrush x:Key="StatusBarForeground" Color="#E0E0E0"/>

    <!-- GroupBox Colors -->
    <SolidColorBrush x:Key="GroupBoxBorder" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="GroupBoxHeader" Color="#E0E0E0"/>

</ResourceDictionary>
