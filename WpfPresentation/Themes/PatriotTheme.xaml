<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Patriot Theme for Patriot Thanks -->
    <!-- Red, White, and Blue color scheme honoring our service members -->

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#F0F4F8"/>
    <SolidColorBrush x:Key="TertiaryBackground" Color="#E1E8ED"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryText" Color="#1A365D"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#4A5568"/>
    <SolidColorBrush x:Key="DisabledText" Color="#A0AEC0"/>

    <!-- Accent Colors (Patriotic) -->
    <SolidColorBrush x:Key="AccentColor" Color="#1D4ED8"/>
    <SolidColorBrush x:Key="AccentColorHover" Color="#1E40AF"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#166534"/>
    <SolidColorBrush x:Key="WarningColor" Color="#CA8A04"/>
    <SolidColorBrush x:Key="DangerColor" Color="#B91C1C"/>

    <!-- Patriot Specific Colors -->
    <SolidColorBrush x:Key="PatriotRed" Color="#BF0A30"/>
    <SolidColorBrush x:Key="PatriotBlue" Color="#002868"/>
    <SolidColorBrush x:Key="PatriotWhite" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PatriotGold" Color="#FFD700"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderColor" Color="#CBD5E1"/>
    <SolidColorBrush x:Key="BorderColorFocus" Color="#1D4ED8"/>

    <!-- Control Backgrounds -->
    <SolidColorBrush x:Key="ControlBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ControlBackgroundHover" Color="#F0F4F8"/>
    <SolidColorBrush x:Key="ControlBackgroundPressed" Color="#E1E8ED"/>

    <!-- Menu Colors (Blue Header) -->
    <SolidColorBrush x:Key="MenuBackground" Color="#002868"/>
    <SolidColorBrush x:Key="MenuForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="MenuHighlight" Color="#1D4ED8"/>

    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridAlternateRow" Color="#F0F4F8"/>
    <SolidColorBrush x:Key="DataGridHeader" Color="#002868"/>
    <SolidColorBrush x:Key="DataGridHeaderText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridSelectedRow" Color="#1D4ED8"/>
    <SolidColorBrush x:Key="DataGridSelectedRowText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridBorder" Color="#CBD5E1"/>

    <!-- TabControl Colors -->
    <SolidColorBrush x:Key="TabBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabSelectedBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabUnselectedBackground" Color="#E1E8ED"/>
    <SolidColorBrush x:Key="TabBorder" Color="#002868"/>

    <!-- Button Colors (Red Accent) -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#BF0A30"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#9B0826"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#BF0A30"/>

    <!-- StatusBar Colors (Blue) -->
    <SolidColorBrush x:Key="StatusBarBackground" Color="#002868"/>
    <SolidColorBrush x:Key="StatusBarForeground" Color="#FFFFFF"/>

    <!-- GroupBox Colors -->
    <SolidColorBrush x:Key="GroupBoxBorder" Color="#1D4ED8"/>
    <SolidColorBrush x:Key="GroupBoxHeader" Color="#002868"/>

</ResourceDictionary>
