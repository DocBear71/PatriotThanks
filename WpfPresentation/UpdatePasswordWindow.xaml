<Window x:Class="WpfPresentation.UpdatePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPresentation"
        mc:Ignorable="d"
        Title="UpdatePassword" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Height="300" Width="440" 
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtInstructions" TextAlignment="Center" 
               VerticalAlignment="Center" Grid.ColumnSpan="2" 
               FontFamily="Yu Gothic UI" FontWeight="SemiBold" 
               TextWrapping="Wrap">
        Please choose a new password: <LineBreak />
        Must Have a capital letter, a lower case letter, and a special character.
        </TextBlock>
        <Label x:Name="lblEmail" Grid.Row="1" Margin="10 5" 
           VerticalContentAlignment="Center" 
           HorizontalContentAlignment="Right">Email:</Label>
        <Label x:Name="lblCurrentPassword" Grid.Row="2" Margin="10 5" 
           VerticalContentAlignment="Center" 
           HorizontalContentAlignment="Right">Current Password:</Label>
        <Label x:Name="lblNewPassword" Grid.Row="3" Margin="10 5" 
           VerticalContentAlignment="Center" 
           HorizontalContentAlignment="Right">New Password:</Label>
        <Label x:Name="lblRetypePassword" Grid.Row="4" Margin="10 5" 
           VerticalContentAlignment="Center" 
           HorizontalContentAlignment="Right">Retype Password:</Label>
        <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" 
             Margin="10 5 20 5" VerticalContentAlignment="Center" 
             HorizontalContentAlignment="Center" />
        <PasswordBox x:Name="pwdCurrentPassword" Grid.Row="2" Grid.Column="1" 
             Margin="10 5 20 5" VerticalContentAlignment="Center" 
             HorizontalContentAlignment="Center" />
        <PasswordBox x:Name="pwdNewPassword" Grid.Row="3" Grid.Column="1" 
             Margin="10 5 20 5" VerticalContentAlignment="Center" 
             HorizontalContentAlignment="Center" />
        <PasswordBox x:Name="pwdRetypePassword" Grid.Row="4" Grid.Column="1" 
             Margin="10 5 20 5" VerticalContentAlignment="Center" 
             HorizontalContentAlignment="Center" />
        <Grid Grid.Row="5" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnSubmit" Grid.Row="5" Width="100" Margin="10 5"
            HorizontalAlignment="Left" FontWeight="Bold" Click="btnSubmit_Click" >Submit</Button>
            <Button x:Name="btnCancel" Grid.Row="5" Grid.Column="1" Width="100" Margin="20 5"
            HorizontalAlignment="right" FontWeight="Bold" Click="btnCancel_Click" >Cancel</Button>
        </Grid>
    </Grid>
</Window>
